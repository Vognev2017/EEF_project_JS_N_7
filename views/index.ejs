<!DOCTYPE html>
<html>

<%- include('./partials/head'); %>

<body>
    <%- include('./partials/navbar'); %>
    <div class="my-container">
        <h1>Welcome!</h1>

        <div class="container">
            <div class="row">
                <div class="col-4">
                    <% if (links) { %>
                    <h4 class="list-user-title">List album</h4>
                    <% links.forEach(function(link){ %>
                    <a href=<%= link.link %>>
                        <%= link.name %>
                    </a>
                    <br />
                    <% }); %>
                    <% } %>
                </div>
                <div class="col-4">
                    <h3>Sign In</h3>
                    <form action="/admin/login" method="POST" id="login">
                        <input type="text" name="name" class="form-control" placeholder="Your name"
                            aria-label="Your name">
                        <input type="text" name="pass" class="form-control" placeholder="Password"
                            aria-label="Password">
                        <button type="submit">Send</button>
                    </form>
                </div>
                <div class="col-4">
                    <% if (users) { %>
                    <h4 class="list-user-title">List user</h4>
                    <table>
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Password</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% users.forEach(function(user){ %>
                            <tr>
                                <td>
                                    <%= user.name %>
                                </td>
                                <td>
                                    <%= user.password %>
                                </td>
                            </tr>
                            <% }); %>
                        </tbody>
                    </table>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
    <%- include('./partials/footer'); %>
</body>

</html>