<!DOCTYPE html>
<html>

<%- include('./partials/head'); %>

<body>
    <%- include('./partials/navbar'); %>
    <div class="my-container">
        <div class="container">
            <h1>Hello
                <% if (name) { %> <%= name %>
                <% } %>
            </h1>

            <div class="row">
                <div class="col-2">
                    <a href="/admin/upload-page/<%- id %>">Add photo</a>
                    <br />
                    <% if (title) { %>
                    <select id="category">
                        <option value="">All</option>
                        <% title.forEach(function(titl){ %>
                        <option value=<%= titl %>>
                            <%= titl %>
                        </option>
                        <% }); %>
                    </select>
                    <% } %>
                </div>
                <div class="col-10">

                    <% if (photos) { %>
                    <div class="row">
                        <% photos.forEach(function(photo){ %>
                        <div class="img-view col-3  <%- photo.title %>">
                            <img src=<%= photo.img %> alt=<%= photo.imgId %> />
                        </div>
                        <% }); %>
                    </div>
                    <% } %>

                </div>
            </div>
        </div>
    </div>
    <%- include('./partials/footer'); %>
</body>

</html>